{
  "manifest_version": 3,
  "name": "BrokerPilot Stands Manager",
  "version": "1.1.0",
  "description": "Управление тестовыми стендами BrokerPilot",
  "permissions": ["storage"],
  "host_permissions": [
    "http://*/*", 
    "https://*/*",
    "https://brokerpilot-stands-server-production.up.railway.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BrokerPilot Stands Manager",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
